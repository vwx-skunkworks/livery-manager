{
    "name": "vatradar/lm-backend",
    "description": "Livery Manager Backend",
    "type": "project",
    "license": "LGPL-3.0-or-later",
    "autoload": {
        "psr-4": {
            "LiveryManager\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "LiveryManager\\Test\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Haymaker",
            "email": "haymaker@users.noreply.github.com"
        }
    ],
    "config": {
        "bin-dir": "vbin",
        "process-timeout": 0,
        "sort-packages": true,
        "allow-plugins": {
            "phpstan/extension-installer": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require-dev": {
        "mockery/mockery": "^1.5",
        "nunomaduro/phpinsights": "^2.8",
        "odan/phinx-migrations-generator": "^5.7",
        "phpstan/extension-installer": "^1.2",
        "phpstan/phpstan": "^1.10",
        "phpstan/phpstan-mockery": "^1.1",
        "phpstan/phpstan-phpunit": "^1.3",
        "phpunit/phpunit": "^10.0",
        "psy/psysh": "^0.11.13",
        "roave/security-advisories": "dev-latest",
        "robmorgan/phinx": "^0.13.4",
        "spaze/phpstan-disallowed-calls": "^2.12",
        "symplify/easy-coding-standard": "^11.3",
        "vwx/atlas-cli": "^2.2"
    },
    "require": {
        "php": ">=8.1",
        "ext-gmp": "*",
        "ext-json": "*",
        "ext-pdo": "*",
        "atlas/orm": "^3.1",
        "cakephp/chronos": "^2.3",
        "dflydev/base32-crockford": "^1.0",
        "fig/http-message-util": "^1.1",
        "monolog/monolog": "^3.3",
        "nyholm/psr7": "^1.5",
        "nyholm/psr7-server": "^1.0",
        "odan/tsid": "^0.1.0",
        "php-di/php-di": "^7.0",
        "php-di/slim-bridge": "^3.3",
        "ramsey/uuid": "^4.7",
        "selective/basepath": "^2.1",
        "slim/flash": "^0.4.0",
        "slim/slim": "4.*",
        "slim/twig-view": "^3.3",
        "symfony/uid": "^6.2",
        "vatradar/env": "^0.5.0",
        "vlucas/phpdotenv": "^5.5"
    },
    "scripts": {
        "stan": "phpstan analyse -c phpstan.neon --no-progress --ansi --xdebug",
        "start": "php -S localhost:8080 -t public/",
        "test": "phpunit --configuration phpunit.xml --do-not-cache-result --colors=always --display-deprecations",
        "test:coverage": "php -d xdebug.mode=coverage -r \"require 'vendor/bin/phpunit';\" -- --configuration phpunit.xml --do-not-cache-result --colors=always --coverage-clover build/logs/clover.xml --coverage-html build/coverage"
    }
}
