{% extends "base.twig" %}

{% block app %}
    <div class="mt-3">
        <h2>Recent Changes</h2>
        <div class="mt-3 d-flex flex-column">
            {% for r in records %}
                <div class="card p-1 my-2 d-flex">
                    <div class="d-flex flex-row border-bottom">
                        <div class="p-1 fs-4 w-50">{{ r.created_at }}</div>
                        <div class="p-1 fs-4 w-25">{{ r.livery.airframe.name }}</div>
                        <div class="p-1 fs-4 w-25">({{ r.livery.airframe.icao }})</div>
                    </div>
                    <div class="d-flex flex-row">
                        <div class="flex-row w-50">
                            <div class="p-1"><span class="fw-bold">Developer:</span> {{ r.livery.airframe.developer.name }}</div>
                            <div class="p-1"><span class="fw-bold">Simulator:</span> {{ r.livery.airframe.simulator.name }}</div>
                            <div class="p-1"><span class="fw-bold">Livery Type:</span> {{ r.livery.livery_type.name }}</div>
                        </div>
                        <div class="flex-column">
                            <div class="p-1">Version: {{ r.version }}</div>
                            <div class="p-1"><a href="#">File: {{ r.file_name }}</a></div>
                        </div>
                    </div>
                    <div class="d-flex flex-row">
                        <div class="p-1 fw-bold">Changes:</div>
                        <div class="p-1">{{ r.changelog }}</div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

{% endblock %}
